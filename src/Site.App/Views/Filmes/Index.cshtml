@model IEnumerable<Site.App.Models.FilmeViewModel>

@{
    ViewData["Title"] = "Lista de Filmes";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Cadastrar Filmes</a>
</p>

<form asp-controller="Filmes" asp-action="Index" method="get">
    <p>
        Nome: <input type="text" name="SearchString" />
        <input class="btn btn-secondary" type="submit" value="Buscar" />
    </p>
</form>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>

            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Distribuidora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
 

            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/Imagens/@item.Imagem" alt="@item.Imagem" style="width: 70px; height: 100px;" />
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Distribuidora.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
          

                <td>
                    @item.Valor.ToString("C")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id"><span><i class="fa fa-pencil"></i></span></a>
                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id"><span><i class="fa fa-search"></i></span></a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><span><i class="fa fa-trash"></i></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>





